FROM        rfratto/golang-builder:1.14-base
MAINTAINER  The Prometheus Authors <prometheus-developers@googlegroups.com>

RUN \
    apt-get update && apt-get install -y --no-install-recommends \
        dpkg-cross \
        g++-s390x-linux-gnu \
        gcc-s390x-linux-gnu \
    && rm -rf /var/lib/apt/lists/*

COPY rootfs /
